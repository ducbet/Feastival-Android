<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="userInfo"
            type="com.framgia.feastival.data.source.model.UserModel.UserInfo"/>
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.framgia.feastival.util.widget.SquareImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            bind:imageUrl="@{userInfo.profile.avatar}"
            android:maxWidth="@dimen/dp_60"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_50"
            android:maxLines="@integer/max_lines"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@android:color/black"
            android:text="@{userInfo.profile.name}"/>

    </LinearLayout>

</layout>